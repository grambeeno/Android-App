<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/LinearLayout01"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
	<ScrollView 
		android:id="@+id/AboutScrollView"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#000000"
    	android:layout_marginBottom = "0dip"
	>
		<LinearLayout
  			xmlns:android="http://schemas.android.com/apk/res/android"
	  		xmlns:my="http://schemas.android.com/apk/res/ICUP.App"
  			android:orientation="vertical"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"
  			android:gravity="center_horizontal">
  
			<ImageView 
				android:id="@+id/imageLogo"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:padding = "2dip"  
			/>
	    
			<TextView
				android:id="@+id/icupWelcome"
				android:layout_width="fill_parent"	
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:text="@string/icupWelcomeText"
			/> 
			 
	
			<Button 
				android:id="@+id/tutorialButton"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layout_below="@id/icupWelcome" 
				android:text="Start Tutorial"
				android:onClick="startTutorialButtonClicked" 
			/>	  
		    <TextView  
			    android:id="@+id/icupInfo"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" 
			    android:text="@string/icupInfoText"
		    />
		    <TextView
			 	android:id="@+id/linkToLokalite"
			 	android:layout_width="wrap_content"
			 	android:layout_height="wrap_content"
			 	android:gravity="left"
			 	android:text="@string/linktolokalite"
			 	android:clickable="true"
			 	android:focusable="true"
			 	android:onClick="onLinkClicked"
			 />
					
			<Gallery xmlns:android="http://schemas.android.com/apk/res/android"
				android:id="@+id/thumbnailgallery" 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="-5dip"
			/>
				
			<ImageView 
				android:id="@+id/ImageView01"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:padding = "2dip"  
			/>

		</LinearLayout>
	</ScrollView>
</LinearLayout>