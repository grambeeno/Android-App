<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFFFFF">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/homePageHeader" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="60dip"
		android:background="#434041">
	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/homePageFooter" android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="60dip"
		android:background="#434041" android:layout_alignParentBottom="true"
		android:gravity="center_horizontal|center_vertical">
		<TextView
			android:paddingLeft="3dip" android:paddingRight="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#FFFFFF"
			android:textColor="#434041" android:text="Featured"
			android:clickable="true" android:onClick="signInButtonPressed" />
		<TextView android:layout_marginLeft="10dip"
		android:paddingLeft="3dip" android:paddingRight="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#FFFFFF"
			android:textColor="#434041" android:text="Events"
			android:clickable="true" android:onClick="signInButtonPressed" />
		<TextView android:layout_marginLeft="10dip"
		android:paddingLeft="3dip" android:paddingRight="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#FFFFFF"
			android:textColor="#434041" android:text="Directory"
			android:clickable="true" android:onClick="signInButtonPressed" />
		<TextView android:layout_marginLeft="10dip"
		android:paddingLeft="3dip" android:paddingRight="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#FFFFFF"
			android:textColor="#434041" android:text="Search"
			android:clickable="true" android:onClick="signInButtonPressed" />
		<TextView android:layout_marginLeft="10dip"
		android:paddingLeft="3dip" android:paddingRight="3dip"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:background="#FFFFFF"
			android:textColor="#434041" android:text="Profile"
			android:clickable="true" android:onClick="signInButtonPressed" />
	</LinearLayout>

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:layout_below="@id/homePageHeader"
		android:layout_above="@id/homePageFooter" android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip">

		<ImageView android:id="@+id/lokaliteLogo"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/lokalite_logo" android:paddingTop="30dp"
			android:layout_centerHorizontal="true" />

		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+id/homePageMenu" android:orientation="vertical"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="30dp" android:background="@drawable/homepagemenuborder"
			android:layout_alignParentBottom="true">

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/homePageSignIn"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#434041" android:text="Sign In"
					android:clickable="true" android:onClick="signInButtonPressed" />
				<ImageView android:layout_alignParentRight="true"
					android:layout_marginRight="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:src="@drawable/arrow_right_float"
					android:layout_gravity="right" />
			</RelativeLayout>

			<View android:id="@+id/divider" android:background="#000000"
				android:layout_width="fill_parent" android:layout_height="1dip"
				android:layout_marginTop="7dip" android:layout_marginBottom="7dip"
				android:layout_below="@id/homePageSignIn" />

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/homePageSignUp"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#434041" android:text="Sign Up"
					android:clickable="true" android:onClick="signUpButtonPressed" />
				<ImageView android:layout_alignParentRight="true"
					android:layout_marginRight="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:src="@drawable/arrow_right_float"
					android:layout_gravity="right" />
			</RelativeLayout>

			<View android:id="@+id/divider" android:background="#000000"
				android:layout_width="fill_parent" android:layout_height="1dip"
				android:layout_marginTop="7dip" android:layout_marginBottom="7dip"
				android:layout_below="@id/homePageSignUp" />

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/homePageLearnMore"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#434041" android:text="Learn More"
					android:clickable="true" android:onClick="learnMoreButtonPressed" />
				<ImageView android:layout_alignParentRight="true"
					android:layout_marginRight="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:src="@drawable/arrow_right_float"
					android:layout_gravity="right" />
			</RelativeLayout>

			<View android:id="@+id/divider" android:background="#000000"
				android:layout_width="fill_parent" android:layout_height="1dip"
				android:layout_marginTop="7dip" android:layout_marginBottom="7dip"
				android:layout_below="@id/homePageLearnMore" />

			<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="horizontal" android:layout_width="fill_parent"
				android:layout_height="wrap_content">
				<TextView android:id="@+id/homePageHelp"
					android:layout_alignParentLeft="true" android:layout_marginLeft="10dip"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:textColor="#434041" android:text="Help" android:clickable="true"
					android:onClick="helpButtonPressed" />
				<ImageView android:layout_alignParentRight="true"
					android:layout_marginRight="10dip" android:layout_width="wrap_content"
					android:layout_height="wrap_content" android:src="@drawable/arrow_right_float"
					android:layout_gravity="right" />
			</RelativeLayout>

		</LinearLayout>

		<TextView android:id="@+id/homePageMotto"
			android:layout_above="@id/homePageMenu" android:layout_below="@id/lokaliteLogo"
			android:gravity="center_horizontal" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textColor="#434041"
			android:paddingTop="10dp" android:text="@string/motto" />
	</RelativeLayout>
</RelativeLayout>